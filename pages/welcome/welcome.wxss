.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.welcome-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.welcome-content {
  width: 100%;
  text-align: center;
}

.slogan {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 60rpx;
  display: block;
}

.features {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  margin-bottom: 80rpx;
}

.feature-item {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.welcome-footer {
  width: 100%;
  padding: 0 40rpx;
}

.start-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  font-weight: bold;
}

.start-btn:active {
  opacity: 0.8;
}